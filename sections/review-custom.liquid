<div class="review-custom" id="review-grid">
  <div class="review-wrapper wrapper">

    
    <h2 class="review-title">{{- heading -}}</h2>
    <p class="review-subtitle">{{- subheading -}}</p>
    <div class="review-number">
      <span class="review-number__icon">
        {% for i in (1..5) %}
          {{star}}
        {% endfor %}
      </span>
      <span class="review-number__text">{{- number_reviews -}}</span>
    </div>
    <div class="review-grid">
      {% for item in section.blocks %}
        {% liquid
          assign photo = item.settings.photo
          assign name = item.settings.name
          assign review = item.settings.review

          assign icon_like = item.settings.icon_like
          assign icon_heart = item.settings.icon_heart
          assign number_like = item.settings.number_like

          if forloop.index > 3
            assign hide_class = "hide-el"
          endif
        %}
        
        <div class="review-item {{hide_class}}">
          <div class="review-item__photo">
            {% if photo != blank %}
              <img src="{{photo  | img_url: 'master'  }}" alt="{{photo.alt}}" loading="lazy">
              {% else %}
              {{default_image}}
            {% endif %}
              
          </div>
          <div class="review-item__main">
            {% if section.settings.show_header %}

           
              <h3 class="person-name">{{name}}</h3>
              <p class="person-feedback">{{review | strip_html}}</p>
            {% endif %}
            {% if icon_like == true or icon_heart == true  %}
              <div class="person-icon"> 
                {% if icon_like %}{{like}}{% endif %}
                {% if icon_heart %}{{heart}}{% endif %}
                {% if number_like != blank %}<span class="person-number">{{number_like}}</span>{% endif %}
              </div>
            {% endif %}
          </div>
          <ul class="review-item__fotter">
            {% for i in (1..5) %}
              {%- capture key_text -%}txt_{{i}}{%- endcapture -%}
              {% if item.settings[key_text] %}
                <li class="review-fotter__item">
                  <span style="--hover: {{item.settings.hover_color}}" class="review-fotter__text">{{item.settings[key_text]}}</span>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    </div>


    <button 
      class="review-btn" 
      data-min="3" 
      data-koef="3" 
      data-max="{{max}}" 
      data-more="{{- show_btn | strip_html -}}"  
      data-hide="{{- hide_btn | strip_html -}}"   
      data-open="true"
    >
      <span>{{show_btn}}</span>
      <svg width="16" height="10" viewBox="0 0 16 10" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15.7527 1.65874C16.1165 1.24277 16.0739 0.611094 15.6582 0.247442C15.2422 -0.115835 14.6106 -0.0733659 14.2469 0.342317L8.00014 7.48186L1.75299 0.341942C1.38934 -0.0741157 0.757657 -0.11621 0.342069 0.247067C-0.0739899 0.610719 -0.116457 1.2424 0.247195 1.65846L7.24724 9.65824C7.34113 9.76559 7.45689 9.85162 7.58675 9.91056C7.71661 9.96951 7.85757 10 8.00019 10C8.1428 10 8.28376 9.96951 8.41362 9.91056C8.54348 9.85162 8.65924 9.76559 8.75313 9.65824L15.7527 1.65874Z" fill="#285234"/>
      </svg>   
    </button>
  </div>
</div>



<script>
  document.addEventListener("DOMContentLoaded", function() {
    const reviewContainer = document.querySelector(".review-grid");
    const btn = document.querySelector(".review-btn");
    const allElems = document.querySelectorAll(".review-item");


    btn.addEventListener("click", toggleMode);

    function toggleMode(event) {
      const toggleButton = event.target;
      const isOpen = toggleButton.dataset.open === "true";
      const maxElements = Number(toggleButton.dataset.max);
      const coefficient = Number(toggleButton.dataset.koef);
      const minElements = Number(toggleButton.dataset.min);
      const textWhenMore = toggleButton.dataset.more;
      const textWhenHide = toggleButton.dataset.hide;

      const reviewItems = document.querySelectorAll(".review-item:not(.hide-el)");
      const visibleElements = reviewItems.length;

      const allElements = Array.from(document.querySelectorAll(".review-item"));

      if (isOpen) {
        for (let i = visibleElements; i < visibleElements + coefficient; i++) {
          const element = allElements[i];
          if (element) element.classList.remove("hide-el");
          if (i === maxElements) {
            updateButtonState(toggleButton, textWhenHide, false);
            break;
          }
        }
      } else {
        for (let i = visibleElements - 1; i >= minElements; i--) {
          const element = allElements[i];
          if (element) element.classList.add("hide-el");
          if (i === minElements) {
            updateButtonState(toggleButton, textWhenMore, true);
            scrollToReview();
            break;
          }
        }
        // for (let i = visibleElements - 1; i >= visibleElements - coefficient; i--) {
        //   const element = allElements[i];
        //   if (element) element.classList.add("hide-el");
        //   if (i === minElements) {
        //     updateButtonState(toggleButton, textWhenMore, true);
        //     break;
        //   }
        // }
      }
    }

    function updateButtonState(button, newText, state) {
      button.querySelector("span").innerHTML = newText;
      button.setAttribute("data-open", state.toString());
    }

    function scrollToReview() {
      const el = document.getElementById("review-grid");
      el.scrollIntoView({ block: "center", behavior: "smooth" });
      // const y = el.getBoundingClientRect().top;
      // console.log(y);
      // window.scrollTo({top: y, behavior: 'smooth'});

      // const y = reviewContainer.getBoundingClientRect().top;
      // window.scrollTo({ top: y, behavior: "smooth" });
    }


    
  })
</script>

