<style>
  .section-{{ section.id }} {
    padding-top: {{ section.settings.st }}px;
    padding-bottom: {{ section.settings.sb }}px;
    position: relative;
  }
  .take_care-title {
    color: {{ section.settings.title_color }}
  }
  @media (max-width: 998px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.stm }}px;
      padding-bottom: {{ section.settings.sbm }}px;
    }
  }

</style>
<style>
  .take_care p{
    margin: 0;
  }
  .take_care{
    background: {{section.settings.bg_color}}
  }
  .take_care-title{
    color: #285234;
    leading-trim: both;
    text-edge: cap;
    font-family: Bolkit;
    font-size: 60px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    text-transform: capitalize;
    font-family: var(--FONT-STACK-HEADING);
    text-align: center;
    margin-bottom: 100px;
  }
  .take_care-block{
    width: calc(50% - 10px);
    padding: 40px 30px;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    height: auto
  
  }
  .take_care-block-title{
    color: #222;
    leading-trim: both;
    text-edge: cap;
    font-family: var(--FONT-STACK-HEADING);
    font-size: 35px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    text-transform: capitalize;
    height: auto;
  }
  .take_care-block-text{
    width: 100%;
    max-width: 382px;
    color: #222;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    font-family: var(--FONT-STACK-BODY);
  }
  .take_care-block-list{
    display: flex;
    row-gap: 40px;
    column-gap: 20px;
    flex-wrap: wrap;
  }
  .take_care_arrow{
    position: initial;
    margin: 0;
    width: 20px;
    height: 20px;
  }
  .take_care_arrow:after{
    content: none;
  }
  .take_care_arrow_box{
    display: none;
    gap: 15px;
    justify-content: right;
    margin-bottom: 20px;
  }

  @media(min-width: 650px) {
    .take_care-block {
      height: auto;
    }
  }
  @media screen and (max-width: 650px) {
    .take_care-block {
      height: 100% !important;
    }
    .take_care-title{
      font-size: 34px;
      margin-bottom: 30px;
    }
    .take_care_arrow_box{
      display: flex;
    }
    .take_care-block{
      width: 100%;
    }
    .take_care-block-list{
      flex-wrap: nowrap;
      column-gap: 0;
    }
    .take_care-block{
      flex-direction: column;
      gap: 15px;
      padding: 30px 30px 20px 30px;
      align-items: start;
    }
    .take_care-block-title{
      font-size: 20px;
    }
    .take_care-block-text{
      font-size: 14px;
      max-width: 261px;
    }


  }
</style>
<div class="take_care section-{{ section.id }}">
  <div class="take_care-wrapper wrapper">
    {% if section.settings.title != blank %}
    <div class="take_care-title">
      {{ section.settings.title  }}
    </div>
    {% endif %}
    <div class="take_care-block-swiper swiper">
      <div class="take_care_arrow_box">
        <div class="swiper-button-prev take_care_arrow swiper-button-prev-care">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
