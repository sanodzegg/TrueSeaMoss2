            <path d="M11.1709 6.12365C11.3789 5.94177 11.6947 5.96305 11.8765 6.1709C12.0582 6.37888 12.0369 6.69472 11.8291 6.87655L8.25927 9.99996L11.8293 13.1236C12.0373 13.3054 12.0583 13.6212 11.8767 13.829C11.6949 14.0371 11.379 14.0583 11.171 13.8765L7.17107 10.3764C7.1174 10.3295 7.07438 10.2716 7.04491 10.2067C7.01544 10.1417 7.00019 10.0712 7.00019 9.99994C7.00019 9.92863 7.01544 9.85815 7.04491 9.79322C7.07438 9.72829 7.1174 9.67041 7.17107 9.62347L11.1709 6.12365Z" fill="#222222" fill-opacity="0.5"/>
          </svg>
        </div>
        <div class="swiper-button-next take_care_arrow swiper-button-next-care">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M9.99993 0C4.47712 0 0 4.47711 0 9.99991C0 15.5227 4.47712 20 9.99993 20C15.5227 20 20 15.5227 20 9.99991C19.9938 4.47964 15.5204 0.00618748 9.99993 0ZM9.99993 18.9999C5.02936 18.9999 0.999937 14.9705 0.999937 9.99991C0.999937 5.02934 5.02936 0.999934 9.99993 0.999934C14.9706 0.999934 18.9999 5.02934 18.9999 9.99991C18.9943 14.9681 14.9681 18.9942 9.99993 18.9999Z" fill="#222222"/>
            <path d="M8.82913 6.12365C8.62115 5.94177 8.30531 5.96305 8.12348 6.1709C7.94184 6.37888 7.96307 6.69472 8.17092 6.87655L11.7407 9.99996L8.17073 13.1236C7.9627 13.3054 7.94165 13.6212 8.12329 13.829C8.30512 14.0371 8.62096 14.0583 8.82899 13.8765L12.8289 10.3764C12.8826 10.3295 12.9256 10.2716 12.9551 10.2067C12.9846 10.1417 12.9998 10.0712 12.9998 9.99994C12.9998 9.92863 12.9846 9.85815 12.9551 9.79322C12.9256 9.72829 12.8826 9.67041 12.8289 9.62347L8.82913 6.12365Z" fill="#222222"/>
          </svg>
        </div>
      </div>


      <div class="take_care-block-list swiper-wrapper">
        {% for block in section.blocks %}
          <div style="background: {{ block.settings.bg_color }}" class="take_care-block swiper-slide">
            <div class="take_care-block-title">
              {{ block.settings.title }}
            </div>
            <div class="take_care-block-text">
              {{ block.settings.text }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    if(window.innerWidth < 650) {
      let take_care = new Swiper('.take_care-block-swiper', {
        // Optional parameters
        slidesPerView: 1,
        autoHeight: true,
        // If we need pagination
        spaceBetween: "20",
        // Navigation arrows
        navigation: {
          nextEl: '.swiper-button-next-care',
          prevEl: '.swiper-button-prev-care',
        },


      });
    }
  })

</script>
