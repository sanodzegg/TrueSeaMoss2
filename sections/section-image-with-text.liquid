{%- liquid
  assign show_image = true
  assign unique = section.id
  assign section_height = section.settings.section_height
  assign wrapper = section.settings.wrapper
  assign image_background = section.settings.image_background
  assign bg_position = section.settings.bg_position
  assign image = section.settings.image
  assign text_position = section.settings.text_position
  assign text_alignment = section.settings.text_alignment
  assign subheading = section.settings.subheading
  assign heading = section.settings.heading
  assign heading_size = section.settings.heading_size | times: 0.01
  assign text = section.settings.text
  assign video_url = section.settings.video_url
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link | default: '#'
  assign button_style = section.settings.button_style
  assign bg_color = section.settings.bg_color
-%}

{%- style -%}
  {%- if bg_color != 'rgba(0,0,0,0)' and bg_color != '' -%}
    #ImageWithText--{{ section.id }} {
      --bg: {{ bg_color }};
    }
  {%- endif -%}
  #ImageWithText--{{ section.id }} .rich-text__heading { --adjust-heading: calc(var(--FONT-ADJUST-HEADING) * {{ heading_size }}) }
{%- endstyle -%}

<section id="ImageWithText--{{ section.id }}"
  class="rich-text{% if image_background %} rich-text--has-background{% endif %} featured-content-section {{ section_height }}"
  data-section-id="{{ section.id }}"
  data-section-type="image-with-text"
  data-overflow-container
  {% unless image_background %}
    data-prevent-transparent-header
  {% endunless %}>
  <div class="featured-content-section__wrapper">
    {%- render 'rich-text',
      show_image: show_image,
      image_background: image_background,
      bg_position: bg_position,
      unique: unique,
      wrapper: wrapper,
      image: image,
      text_position: text_position,
      text_alignment: text_alignment,
      subheading: subheading,
      heading: heading,
      text: text,
      video_url: video_url,
      button_text: button_text,
      button_link: button_link,
      button_style: button_style -%}
  </div>
</section>

{% schema %}
{
    "name": "Image with text",
    "class": "rich-text transparent-header",
    "settings": [
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "select",
        "id": "section_height",
        "label": "Height",
        "default": "six-fifty-height",
        "options": [
          { "value": "full-height", "label": "Full screen" },
          { "value": "seven-fifty-height", "label": "750px" },
          { "value": "six-fifty-height", "label": "650px" },
          { "value": "five-fifty-height ", "label": "550px" },
          { "value": "four-fifty-height", "label": "450px" }
        ]
      },
      {
        "type": "select",
        "id": "text_position",
        "label": "Block position",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "select",
        "id": "wrapper",
        "label": "Width",
        "default": "normal",
        "options": [
          { "value": "normal", "label": "Normal" },
          { "value": "full", "label": "Wide" }
        ]
      },
      {
        "type": "header",
        "content": "Image"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "checkbox",
        "id": "image_background",
        "label": "Set image as a background",
        "default": false
      },
      {
        "type": "select",
        "id": "bg_position",
        "label": "Position",
        "default": "center-center",
        "options": [
          { "label": "Top", "value": "center-top" },
          { "label": "Right", "value": "right-center" },
          { "label": "Center", "value": "center-center" },
          { "label": "Left", "value": "left-center" },
          { "label": "Bottom", "value": "center-bottom" }
        ]
      },
      {
        "type": "header",
        "content": "Text"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Alignment",
        "default": "left",
        "options": [
          { "label": "Left", "value": "left" },
          { "label": "Center", "value": "center" }
        ]
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Subheading"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Our Story"
      },
      {
        "type": "range",
        "id": "heading_size",
        "label": "Heading size",
        "default": 100,
        "min": 100,
        "max": 200,
        "step": 10,
        "unit": "%"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
      },
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Text",
        "default": "Learn More"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Link"
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Style",
        "default": "primary",
        "options": [
          { "label": "Text", "value": "text" },
          { "label": "Small button", "value": "primary btn--small" },
          { "label": "Large button", "value": "primary" },
          { "label": "Small outline button", "value": "secondary btn--small" },
          { "label": "Large outline button", "value": "secondary" }
        ]
      },
      {
        "type": "header",
        "content": "Video button"
      },
      {
        "type": "video_url",
        "id": "video_url",
        "label": "Link",
        "accept": ["youtube", "vimeo"]
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background"
      }
    ],
    "presets": [
      {
        "name": "Image with text",
        "category": "Image"
      }
    ]
}
{% endschema %}